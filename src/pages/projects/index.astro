---
import Layout from "@layouts/Layout.astro";
import ProjectCard from "./ProjectCard.astro";
import { getProjects } from "@utils/content-utils";

const projects = await getProjects();
---

<Layout title="Projects" className="onload-animation space-y-10">
  {
    projects.map(({ data, id }, idx, self) => (
      <Fragment>
        <ProjectCard {...{ ...data, id }} />
        <hr
          class:list={["border-border", { hidden: self.length - 1 === idx }]}
        />
      </Fragment>
    ))
  }
</Layout>
