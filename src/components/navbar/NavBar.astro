---
import ToggleTheme from "./ToggleTheme.astro";

const navLinks = [
  { title: "Blogs", url: "/blogs" },
  { title: "Projects", url: "/projects" },
];

const path = Astro.url.pathname;
---

<nav
  class="noSelect left-0 top-0 z-10 mb-6 inline-flex h-16 w-full max-w-2xl select-none items-center gap-3 text-sm text-secondary-content transition-shadow duration-500"
  transition:persist
>
  <a href="/" class="inline-flex items-center gap-1 hover:text-blue-600">
    <span class="iconify text-2xl tabler--moon-2"></span>
  </a>
  <!-- Navigation Links -->
  <ul class="inline-flex gap-4 text-sm font-medium text-core-content">
    {
      navLinks.map((i) => (
        <li class="hover:text-link">
          <a href={i.url}>{i.title}</a>
        </li>
      ))
    }
  </ul>
  <!-- Sidebar Toggle -->
  <div class="ml-auto inline-flex items-center gap-3">
    <a href="/archive" class="inline-flex items-center hover:text-blue-600">
      <span class="iconify text-2xl tabler--archive"></span>
    </a>
    <!-- Dark/Light Mode Switch -->
    <ToggleTheme />
    <span class="h-5 w-1 border-r-2 border-primary/40"></span>
    <span
      id="sidebar-toggle"
      class="flex cursor-pointer items-center p-1 transition duration-150 hover:text-blue-600 active:scale-95"
    >
      <span x-on:click="open = !open" class="iconify text-2xl tabler--menu-2"
      ></span>
    </span>
  </div>
</nav>

<script src="../sidebar/toggleSiebar.ts"></script>
