{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@utils/*": ["src/utils/*"]
    },
    "plugins": [
      {
        "name": "@astro/ts-plugin"
      }
    ]
  }
}
